{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/article_contract.json",
  "title": "Article Contract",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "id",
    "title",
    "url",
    "ingested_at"
  ],
  "properties": {
    "id": {
      "type": "string",
      "description": "Stable article identifier"
    },
    "title": {
      "type": "string",
      "minLength": 1
    },
    "headline": {
      "type": "string",
      "minLength": 1
    },
    "text": {
      "type": "string",
      "minLength": 1
    },
    "url": {
      "type": "string",
      "format": "uri"
    },
    "ingested_at": {
      "type": "string",
      "format": "date-time"
    },
    "embedding": {
      "type": "array",
      "items": {
        "type": "number"
      }
    },
    "embedding_model": {
      "type": "string"
    }
  }
}
